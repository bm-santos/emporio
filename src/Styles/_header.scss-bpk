div {
    overflow: hidden;
    .header {
        position: sticky !important;
        align-items: center;
        margin: auto;

        .container {
            display: grid;
            grid-template-columns: 10% 70% 20%;

            margin: auto;
            padding: 5px 10px;
            background-color: rgb(255, 255, 255);
            align-items: center;
            justify-items: stretch;
            flex-wrap: inherit;
            .item-logo {
                grid-area: "item-logo";
                justify-self: center;
                img {
                    border-radius: 15px;
                    width: 120px;
                }
            }
            .item-categorias {
                grid-area: "item-categorias";
                .home-disabled {
                    padding: 15px;
                    color: #333;
                    text-decoration: none;
                    border-bottom: 5px solid #ffb700;
                    
                }
                li {
                    display: inline;
                    margin: auto;
                }
                a {
                    padding: 15px;
                    color: #333;
                    text-decoration: none;
                }
                a:hover {
                    border-bottom: 5px solid #ffb700;
                    background-color: #f5f5f5;
                }
            }
            .item-carrinho {
                justify-self: top;
                .itens-carrinho {
                    background-color: red;
                    color: white;
                    padding: 5px;
                }
                span {
                    color: #000000;
                    border-radius: 50%;
                    font-size: 10;
                }
                p {
                    font-weight: lighter;
                }
            }
        }
    }
}
